# Environment variables for RUNIT server

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/runit_dev

# GitHub OAuth (register at https://github.com/settings/developers)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:10000/auth/github/callback

# JWT Secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your_jwt_secret_here

# Session Secret
SESSION_SECRET=your_session_secret_here

# Server
PORT=10000
NODE_ENV=development
